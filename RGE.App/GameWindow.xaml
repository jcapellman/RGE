<Window x:Class="RGE.Engine.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RGE.Engine"
        mc:Ignorable="d"
        Title="RGE" Width="{Binding Game.Config.vid_xres}" MinWidth="320" WindowStartupLocation="CenterScreen" MinHeight="200" Height="{Binding Game.Config.vid_yres}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" MinHeight="20" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="Red">
            <TextBlock Foreground="White" FontWeight="Bold" TextAlignment="Center" Text="{Binding Game.TitleBarStr}" />
        </Grid>

        <Grid Grid.Row="1" Background="Black">
            <TextBox VerticalScrollBarVisibility="Hidden" Background="Black" Foreground="Gray" HorizontalScrollBarVisibility="Hidden" Text="{Binding Log, Mode=TwoWay}" />
        </Grid>
    </Grid>
</Window>